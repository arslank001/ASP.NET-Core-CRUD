@model IEnumerable<CRUDCoreApplication.Models.ImageModel>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <p class="text-center text-danger">@TempData["DeleteMsg"]</p>
            <table class="table table-bordered">
                <thead>
                    <tr class="text-center">
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var Img in Model)
                {
                    <tr class="text-center">
                        <td>@Img.ImageID</td>
                        <td>@Img.Name</td>
                        <td><img src="/@Img.ImagePath" height="100px;" width="100px;" /></td>
                        <td>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-controller="Image" asp-route-id="@Img.ImageID">Delete</a>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-controller="Image" asp-route-id="@Img.ImageID">Edit</a>
                        </td>

                    </tr>
   }
            </table>
        </div>
    </div>
</div>

